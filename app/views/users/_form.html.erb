<%= form_for @user do |f| %>
  <%= f.label :username %><br>
  <%= f.text_field :username %><br>
  <%= f.label :password %><br>
  <%= f.password_field :password_digest %><br>
  <%= f.label "Confirm password" %><br>
  <%= f.password_field :password_confirmation %><br>
  <br>
  <%= f.submit %>
  <% end %>
